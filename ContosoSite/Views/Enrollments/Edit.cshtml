    @Html.AntiForgeryToken()
    <table class="table">
        <tr>
            <th></th>
            <th>Grade</th>
            <th>Title</th>
            <th>Last Name</th>
        </tr>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model[i].EnrollmentID)
                </td>
                <td>
                    <div class="form-group">
                        @Html.EditorFor(model => model[i].Grade, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model[i].Grade, "", new { @class = "text-danger" })
                    </div>
                </td>
                <td>
                    <div class="form-group">
                        @*@Html.LabelFor(model => model[i].CourseID, "CourseID", htmlAttributes: new { @class = "control-label col-md-2" })*@
                        @Html.DropDownList("CourseID", (SelectList)ViewBag.CourseID, new {@class = "form-control"})
                        @Html.ValidationMessageFor(model => model[i].CourseID, "", new { @class = "text-danger" })
                    </div>
                </td>
                <td>
                    <div class="form-group">
                        @*@Html.LabelFor(model => model.StudentID, "StudentID", htmlAttributes: new { @class = "control-label col-md-2" })*@
                        @*@Html.DropDownList("StudentID", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model[i].StudentID, "", new { @class = "text-danger" })*@
                    </div>
                </td>
            </tr>
        }
    </table>
    <p><input type="submit" value="Save" class="btn btn-default" /></p>
    <p style="color:green" ; font-size:12px;">
        @ViewBag.Message
    </p>
}
@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}