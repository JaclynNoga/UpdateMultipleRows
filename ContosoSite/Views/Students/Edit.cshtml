@model List<ContosoSite.Models.Student>

@using (@Html.BeginForm("Edit"))
{
    @Html.AntiForgeryToken()
    <table class="table">
        <tr>
            <th></th>
            <th>Last Name</th>
            <th>First Name</th>
            <th>Enrollment Date</th>
            <th>Middle Name</th>
        </tr>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model[i].StudentID)
                </td>
                <td>
                    <div class="form-group">
                        @Html.EditorFor(model => model[i].LastName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model[i].LastName, "", new { @class = "text-danger" })
                    </div>
                </td>
                <td>
                    <div class="form-group">
                        @Html.EditorFor(model => model[i].FirstName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model[i].FirstName, "", new { @class = "text-danger" })
                    </div>
                </td>
                <td>
                    <div class="form-group">
                        @Html.EditorFor(model => model[i].EnrollmentDate, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model[i].EnrollmentDate, "", new { @class = "text-danger" })
                    </div>
                </td>
                <td>
                    <div class="form-group">
                        @Html.EditorFor(model => model[i].MiddleName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model[i].MiddleName, "", new { @class = "text-danger" })
                    </div>
                </td>
            </tr>
        }
    </table>
    <p><input type="submit" value="Save" class="btn btn-default" /></p>
    <p style="color:green" ; font-size:12px;">
        @ViewBag.Message
    </p>
}
@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}
